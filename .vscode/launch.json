    "version": "0.2.0",
    "configurations": [
        {
            "name": "Code",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [],
            "env": {
                "KUBEBUILDER_ASSETS": "${workspaceFolder}/testbin/bin"
            },
            "showLog": true
        },
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/internal/controller",
            "args": [
                "-ginkgo.v",
            ],
            "env": {
                "KUBEBUILDER_ASSETS": "${workspaceFolder}/bin/k8s/1.28.0-darwin-arm64",
                "GOMEGA_DEFAULT_EVENTUALLY_TIMEOUT": "10m",
                "GOMEGA_DEFAULT_EVENTUALLY_POLLING_INTERVAL": "100ms"
            },
            "showLog": true
        },
        {
            "name": "Debug Unit Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/internal/controller",
            "args": [
                "-v=4",
                "-ginkgo.v",
                "-ginkgo.progress"
            ],
            "env": {
                "NNF_TEST_ENVIRONMENT": "true",
                "KUBEBUILDER_ASSETS": "${workspaceFolder}/testbin/bin",
                "GOMEGA_DEFAULT_EVENTUALLY_TIMEOUT": "10m",
                "GOMEGA_DEFAULT_EVENTUALLY_POLLING_INTERVAL": "100ms"
            },
            "showLog": true
        },
        {
            "name": "Debug k8s operator remotely",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "",
            "port": 40000,
            "host": "127.0.0.1",
            "showLog": true,
            "trace": "log",
            "logOutput": "rpc"
        }
    ]
